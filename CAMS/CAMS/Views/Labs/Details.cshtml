@model CAMS.Models.Lab

@{
    ViewBag.Title = "Details";
}

<h2>תפוסה נוכחית</h2>

<div>
    <div>
        <h6>בניין: @Html.DisplayFor(model => model.Building)</h6>
        <h6>כיתה: @Html.DisplayFor(model => model.RoomNumber)</h6>
    </div>

    <hr />
    <div class="labs">
        @foreach (var item in Model.Computers)
        {
            @if(item.GetStatus(item.ComputerName))
            <img resource=""/>
          @Html.DisplayFor(modelItem => item.ComputerName)
        }
    </div>
</div>
<p>
    @Html.ActionLink("ערוך", "Edit", new { id = Model.LabId }) |
    @Html.ActionLink("חזרה לרשימה", "Index")
</p>
