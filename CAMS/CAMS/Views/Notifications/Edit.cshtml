@model CAMS.Models.User

@{
    ViewBag.Title = "Edit";
}

<h2>עריכת העדפת התראות</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.UserId)
    @Html.HiddenFor(model => model.Email)
    <div class="form-group">
        @Html.Label("האם לשלוח התראות למייל?", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <select form="MailNotifications">
                <option value="">לא</option>
                <option value="">כן, אחת ליום</option>
                <option value="">כן, אחת לשבוע</option>
                <option value="">כן, אחת לחודש</option>
                <option value="">כן, דוח סיכום שנתי </option>
            </select>
            @*<div class="checkbox">
                @Html.EditorFor(model => model.MailNotifications)
                @Html.ValidationMessageFor(model => model.MailNotifications, "", new { @class = "text-danger" })
            </div>*@
        </div>
    </div>
    <label>הגדר לאחר כמה ימים להתראה עבור:</label>
    <div class="form-group">
        @Html.Label("מחשב ללא תקשורת", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.DisconnectedPeriod, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.DisconnectedPeriod, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.Label("מחשב ללא משתמש מחובר", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.NotActivePeriod, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.NotActivePeriod, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="שמור" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("חזרה לרשימה", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
