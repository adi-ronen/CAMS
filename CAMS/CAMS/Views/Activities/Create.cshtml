@model CAMS.Models.ActivitiesModel

@{
    ViewBag.Title = "Create";
}

<h2>דוחות</h2>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>דוח חדש</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group row">
            <div>
                @Html.Label("תאריך התחלה", htmlAttributes: new { @class = "control-label" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
                </div>
            </div>
            <div>
                @Html.Label("תאריך סיום", htmlAttributes: new { @class = "control-label" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Logout, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Logout, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
            <div class="form-group">
                @Html.Label("טווח שעות", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10 row">
                    מ - 
                    @Html.EditorFor(model => model.Mode, new { htmlAttributes = new { @class = "form-control" } })
                    עד - 
                    @Html.EditorFor(model => model.Mode, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Mode, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.Label("כיתות מחשוב", "ComputerId", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10"> @*TBD- multi select labs to include in report*@
                    @Html.DropDownList("ComputerId", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.ComputerId, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="צור" class="btn btn-default" />
                </div>
            </div>
        </div>
}