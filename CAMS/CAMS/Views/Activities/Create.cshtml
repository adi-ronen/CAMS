@model CAMS.Models.ActivitiesModel

@{
    ViewBag.Title = "Create";
}

<h2>דוחות</h2>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>דוח חדש</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group row">
            <div>
                @Html.Label("תאריך התחלה")
                <div class="col-md-10">
                    <input type="text" class="datepicker">
                </div>
            </div>
            <div>
                @Html.Label("תאריך סיום")
                <div class="col-md-10">
                    <input type="text" class="datepicker">
                    @*@Html.ValidationMessageFor(model => model.Logout, "", new { @class = "text-danger" })*@
                </div>
            </div>
        </div>
        <div class="form-group">
            @Html.Label("טווח שעות", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10 row">
                מ -
                <input type="text" class="timepicker">
                עד -
                    <input type="text" class="timepicker">
                    @*@Html.ValidationMessageFor(model => model.Mode, "", new { @class = "text-danger" })*@
</div>
        </div>
        <div class="form-group">
            @Html.Label("כיתות מחשוב", "ComputerId", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @*TBD- multi select labs to include in report*@
                @Html.DropDownList("ComputerId", null, htmlAttributes: new { @class = "form-control" })
                @*@Html.ValidationMessageFor(model => model.ComputerId, "", new { @class = "text-danger" })*@
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="צור" class="btn btn-default" />
            </div>
        </div>
    </div>
}

@section PreloadScripts{
    @Scripts.Render("~/bundles/jquery-ui")
    <script src="~/Scripts/jquery-TimePicker-1.0.0.js"></script>
    <script src="~/Scripts/datepicker-he.js"></script>
    <script src="~/Scripts/Activities.js"></script>
}
