 @model IEnumerable<CAMS.Models.Department>

@{
    ViewBag.Title = "Index";
}

<h2>מחלקות</h2>

<p>
    @Html.ActionLink("מחלקה חדשה", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayName("שם המחלקה")
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Domain)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.DepartmentName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Domain)
        </td>
        <td>
            @Html.ActionLink("ערוך", "Edit", new { id=item.DepartmentId }) |
            @Html.ActionLink("מחק", "Delete", new { id=item.DepartmentId })
        </td>
    </tr>
}

</table>
