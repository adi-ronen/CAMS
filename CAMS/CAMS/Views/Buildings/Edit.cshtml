@model object

@{
    ViewBag.Title = "Edit";
    ViewBag.Building = (string)Model;
}

<h2>ערוך בניין</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.Label("שם בניין", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input name="Building" class="form-control widthinput" type="text" value="@ViewBag.Building" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="שמור" class="btn btn-default" />
            </div>
        </div>
    </div>
}
<div>
    @Html.ActionLink("חזרה לרשימה", "Index")
</div>

